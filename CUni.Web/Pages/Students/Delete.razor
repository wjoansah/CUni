@page "/students/delete/{id:int}"
@using CUni.Shared;
@inject HttpClient HttpClient;
@inject NavigationManager NavigationManager;

<h3>Delete</h3>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            First Name(s)
        </dt>
        <dd class="col-sm-10">
            @student.FirstMidName
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @student.LastName
        </dd>
        <dt class="col-sm-2">
            Enrollment Date
        </dt>
        <dd class="col-sm-10">
            @student.EnrollmentDate
        </dd>
    </dl>

    <form  @onsubmit="HandleDelete">
        <input type="hidden" value="@id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="/students">Back to List</a>
    </form>
</div>

@code {
    [Parameter]
    public int id { get; set; }

    StudentResponse student = new();

    protected override async Task OnInitializedAsync()
    {
        student = await HttpClient.GetFromJsonAsync<StudentResponse>($"/students/{id}");
    }

    async void HandleDelete()
    {
        var response = await HttpClient.DeleteAsync($"/students/{id}");
        if (response.IsSuccessStatusCode)
        {
            NavigationManager.NavigateTo("/students", true);
        }
    }

}
